{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "globals": {
    "JSX": true
  },
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:cypress/recommended",
    "prettier"
  ],
  "rules": {
    "camelcase": 1,
    "max-len": [
      1,
      {
        "tabWidth": 2,
        "comments": 80,
        "ignoreUrls": true
      }
    ]
  }
}
