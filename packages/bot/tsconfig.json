{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "noEmit": false,
    "declaration": false,
    // @discordjs/builders has type errors
    "skipLibCheck": true
  },
  "include": ["src", "src/*.d.ts"],
  "references": [
    {"path": "../types"},
    {"path": "../models"},
    {"path": "../config"}
  ]
}
